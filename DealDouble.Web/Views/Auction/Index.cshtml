@model DealDouble.Web.ViewModels.AuctionsViewModel
@{
    ViewBag.Title = "Auction List";
}

<div class="row">

    <div id="listingArea" class="col-lg-12">
        <div class="col-md-12 mt-2">
          
                <h2 class="font-weight-bold float-left">Auctions</h2>        
                <button id="createAuction" class="btn btn-sm btn-success float-right mt-1" data-toggle="modal" data-target="#auctionCreateFrom"><i class="fas fa-plus"></i> Crate New Auction</button>          
        </div>
        <table class="table  table-striped table-hover mt-3">
            <thead class="bg-info">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.AllAuction)
            {
                    <tr>
                        <td>@data.Title</td>
                        <td>@data.Description</td>
                        <td>@data.ActualAmount</td>
                        <td>@data.StartingTime</td>
                        <td>@data.EndTime</td>
                        <td>
                            <button class="editButton btn btn-sm btn-primary" data-id="@data.AuctionID" data-toggle="modal" data-target="#auctionCreateFrom"> Edit </button>
                            <button class="deleteButton btn btn-sm btn-danger" data-id="@data.AuctionID"> Delete </button>
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
      

    
        <script>
    $("#createAuction").click(function () {
        $.ajax({
            metod: "Get",
            url: "@Url.Action("Create", "Auction")",
        }).done(function (response) {
            $("#contentArea").html(response);
            $("#auctionCreateFrom").modal('toggle');
        }).fail(function (xhr, ajaxOptions, thrownError) {
            alert(xhr.status);
            alert(thrownError);
        })

    });

        $(".editButton").click(function () {
            var dataId = $(this).attr("data-id")
            $.ajax({
                method: 'Get',
                url: '@Url.Action("Edit","Auction")',
                data: { id : dataId }
            }).done(function (response) {
                $("#contentArea").html(response);
                $("#auctionCreateFrom").modal('toggle');
            }).fail(function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            });
        })
        $(".deleteButton").click(function () {

            var dataId = $(this).attr("data-id")
            if (confirm("Are you sure to delete this Auction !!")) {
                $.ajax({
                    method: 'Get',
                    url: '@Url.Action("Delete","Auction")',
                    data: { id: dataId }
                }).done(function (response) {
                    alert("Data Delete Successfully")
                    $("#listingArea").html(response);

                }).fail(function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                });
            }
        })
        </script>
    </div>
</div>
  <!-- Modal -->
<div class="modal fade bd-example-modal-xl" id="auctionCreateFrom" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" id="contentArea">

        </div>
    </div>
</div>



