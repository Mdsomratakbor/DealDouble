@model DealDouble.Web.ViewModels.CategoryList
@{
    ViewBag.Title = Model.PageTitle;
}
<div class="row">

    <div id="listingArea" class="col-lg-12">
        <div class="col-md-12 mt-2">

            <h2 class="font-weight-bold float-left">@ViewBag.Title</h2>
            <button id="createCateogory" class="btn btn-sm btn-success float-right mt-1" data-toggle="modal" data-target="#auctionCreateFrom"><i class="fas fa-plus"></i>Crate New Category</button>
        </div>
        <table class="table  table-striped table-hover mt-3">
            <thead class="bg-info">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Auctions</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Categories)
            {
                    <tr>
                        <td>@data.Name</td>
                        <td>@data.Description</td>
                        <td>@data.Auctions.Count()</td>
                        <td>
                            <button class="editButton btn btn-sm btn-primary" data-id="@data.ID" data-toggle="modal" data-target="#categoryCreateFrom"> Edit </button>
                            <button class="deleteButton btn btn-sm btn-danger" data-id="@data.ID"> Delete </button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <script>      
      $("#createCateogory").click(function () {
        $.ajax({
            metod: "Get",
            url: "@Url.Action("Create", "Category")",
        }).done(function (response) {
            $("#contentArea").html(response);
            $("#categoryCreateFrom").modal('toggle');
        }).fail(function (xhr, ajaxOptions, thrownError) {
            alert(xhr.status);
            alert(thrownError);
        })

    });

        $(".editButton").click(function () {
            var dataId = $(this).attr("data-id")
            $.ajax({
                method: 'Get',
                url: '@Url.Action("Edit","Category")',
                data: { id : dataId }
            }).done(function (response) {
                $("#contentArea").html(response);
                $("#categoryCreateFrom").modal('toggle');
            }).fail(function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            });
        })
        $(".deleteButton").click(function () {

            var dataId = $(this).attr("data-id")
            if (confirm("Are you sure to delete this Auction !!")) {
                $.ajax({
                    method: 'Get',
                    url: '@Url.Action("Delete","Category")',
                    data: { id: dataId }
                }).done(function (response) {
                    alert("Data Delete Successfully")
                    $("#listingArea").html(response);

                }).fail(function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                });
            }
        })
        </script>
    </div>
</div>
<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="categoryCreateFrom" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="contentArea">
      
        </div>
    </div>
</div>

